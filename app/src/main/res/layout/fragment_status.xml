<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.StatusFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/status_recyclerview"
        android:layout_width="409dp"
        android:layout_height="449dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Your_Friend" />

    <androidx.cardview.widget.CardView
        android:id="@+id/rectangle_1"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="93dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="94dp"
        android:backgroundTint="#0C1527"
        android:elevation="14dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/total_bal"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="64dp"
            android:gravity="top"
            android:text="Money"
            android:textColor="#83BE90"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/invite_a_fr"
            android:layout_width="148dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:lineSpacingExtra="11sp"
            android:text="Youâ€™re total rewards Earned"
            android:textColor="#B0B1B2"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/belaa" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Your_Friend"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="225dp"
        android:gravity="top"
        android:text="Your Friends"
        android:textColor="#171A1F"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1" />




</androidx.constraintlayout.widget.ConstraintLayout>