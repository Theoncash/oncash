<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.profile_fragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bacground_img_profile">


        <View
            android:id="@+id/v"
            android:layout_width="310dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_curve2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Explore_text"
            app:layout_constraintVertical_bias="0.053" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"

            android:src="@drawable/leaderboard_icon"
            app:layout_constraintBottom_toBottomOf="@+id/v"
            app:layout_constraintEnd_toStartOf="@+id/LeaderBoard_Text"
            app:layout_constraintStart_toStartOf="@+id/v"
            app:layout_constraintTop_toTopOf="@+id/v" />

        <View
            android:id="@+id/v2"
            android:layout_width="310dp"
            android:layout_height="47dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_curve2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v"
            app:layout_constraintVertical_bias="0.049" />

        <ImageView
            android:id="@+id/piggy_icon"
            android:layout_width="109dp"
            android:layout_height="93dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/piggy_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.108" />


        <TextView
            android:id="@+id/My_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="113dp"
            android:layout_marginBottom="17dp"
            android:text="Total Earning"
            android:textColor="@color/white"
            android:textSize="@dimen/text_x_large"
            app:layout_constraintBottom_toTopOf="@+id/current_balance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/piggy_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/current_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="140dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/piggy_icon"
            app:layout_constraintTop_toBottomOf="@+id/My_wallet" />

        <TextView
            android:id="@+id/Explore_text"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="262dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="Explore"
            android:textSize="@dimen/text_x_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.31"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/piggy_icon" />


        <TextView
            android:id="@+id/LeaderBoard_Text"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/Leader"
            android:textAppearance="@style/wallet_bala"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="@+id/v"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/v"
            app:layout_constraintTop_toTopOf="@+id/v"
            app:layout_constraintVertical_bias="0.642" />

        <TextView
            android:id="@+id/Referal_text"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/Referal"
            android:textAppearance="@style/wallet_bala"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/v2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.247"
            app:layout_constraintStart_toStartOf="@+id/v2"
            app:layout_constraintTop_toTopOf="@+id/v2"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/click1"
            android:layout_width="49dp"
            android:layout_height="13dp"
            android:layout_alignParentStart="true"
            android:gravity="top"
            android:src="@drawable/click_img"
            app:layout_constraintBottom_toBottomOf="@+id/v"
            app:layout_constraintEnd_toEndOf="@+id/v"
            app:layout_constraintHorizontal_bias="0.929"
            app:layout_constraintStart_toEndOf="@+id/LeaderBoard_Text"
            app:layout_constraintTop_toTopOf="@+id/v"
            app:layout_constraintVertical_bias="0.588" />

        <ImageView
            android:id="@+id/click2"
            android:layout_width="50dp"
            android:layout_height="13dp"
            android:layout_alignParentStart="true"
            android:gravity="top"
            android:src="@drawable/click_img"
            app:layout_constraintBottom_toBottomOf="@+id/v2"
            app:layout_constraintEnd_toEndOf="@+id/v2"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintStart_toEndOf="@+id/Referal_text"
            app:layout_constraintTop_toTopOf="@+id/v2"
            app:layout_constraintVertical_bias="0.441" />

        <ImageView
            android:id="@+id/referal_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:clickable="false"
            android:gravity="top"
            android:src="@drawable/referal_img"
            app:layout_constraintBottom_toBottomOf="@+id/v2"
            app:layout_constraintEnd_toStartOf="@+id/Referal_text"
            app:layout_constraintStart_toStartOf="@+id/v2"
            app:layout_constraintTop_toTopOf="@+id/v2" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>