<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Add UI elements such as TextViews, Buttons, and an ImageView for the reward -->
    <TextView
        android:id="@+id/textCollectReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations! You've won a reward!"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/reward_image"
        android:layout_gravity="center_horizontal"
        android:padding="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect Reward"
        android:id="@+id/btnCollectReward"
        android:layout_gravity="center_horizontal"
        android:padding="16dp" />
</LinearLayout>
