<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reddem_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.redeem">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_wallet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_wallet_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/back"
            android:layout_width="186dp"
            android:layout_height="187dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="104dp"
            android:backgroundTint="#F4F4F4"
            android:src="@drawable/circule_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.312"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/rectangle_7"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangle_wallet_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.408"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wallet_bala_text" />

        <TextView
            android:id="@+id/wallet_bala"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textAppearance="@style/wallet_bala"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_7"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_7"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="@+id/rectangle_7"
            app:layout_constraintTop_toTopOf="@+id/rectangle_7"
            app:layout_constraintVertical_bias="0.473" />

        <TextView
            android:id="@+id/wallet_bala_text"
            android:layout_width="164dp"
            android:layout_height="31dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/noto"
            android:gravity="center"
            android:text="@string/wallet_bala"
            android:textAppearance="@style/wallet_bala"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/back" />

        <androidx.cardview.widget.CardView
            android:id="@+id/rectangle_8"
            android:layout_width="412dp"
            android:layout_height="504dp"
            android:layout_marginTop="124dp"
            app:cardCornerRadius="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_7">


            <TextView
                android:layout_width="234dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppinsemibold"
                android:text="@string/withdrawal_history"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/withdrawalTransaction"
                android:layout_width="374dp"
                android:layout_height="201dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/withdrawButton"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="230dp"
                android:backgroundTint="#2479E9"
                android:elevation="14dp"
                android:fontFamily="@font/noto"
                android:gravity="center"
                android:text="@string/withdraw"
                android:textAppearance="@style/description"
                android:textSize="20sp"
                app:cornerRadius="46dp" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>